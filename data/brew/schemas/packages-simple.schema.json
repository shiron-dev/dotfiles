{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/shiron-dev/dotfiles/schemas/packages-simple.schema.json",
  "title": "Simple Homebrew Packages Configuration",
  "description": "Schema for simple Homebrew packages configuration file",
  "type": "object",
  "properties": {
    "taps": {
      "type": "array",
      "description": "Homebrew taps to install",
      "items": {
        "type": "string",
        "description": "Tap name (e.g., 'homebrew/core')",
        "pattern": "^[a-zA-Z0-9_-]+/[a-zA-Z0-9_-]+$",
        "examples": [
          "homebrew/core",
          "homebrew/services",
          "jesseduffield/lazygit"
        ]
      },
      "uniqueItems": true
    },
    "brews": {
      "type": "array",
      "description": "Homebrew formulae to install",
      "items": {
        "type": "string",
        "description": "Formula name",
        "minLength": 1,
        "examples": [
          "git",
          "yq",
          "node",
          "python@3.12"
        ]
      },
      "uniqueItems": true
    },
    "casks": {
      "type": "array",
      "description": "Homebrew casks to install",
      "items": {
        "type": "string",
        "description": "Cask name",
        "minLength": 1,
        "examples": [
          "visual-studio-code",
          "google-chrome",
          "docker"
        ]
      },
      "uniqueItems": true
    },
    "mas_apps": {
      "type": "array",
      "description": "Mac App Store applications to install",
      "items": {
        "$ref": "#/definitions/mas_app"
      }
    },
    "uncategorized_taps": {
      "type": "array",
      "description": "Uncategorized taps (auto-detected)",
      "items": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9_-]+/[a-zA-Z0-9_-]+$"
      },
      "uniqueItems": true
    },
    "uncategorized_brews": {
      "type": "array",
      "description": "Uncategorized formulae (auto-detected)",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true
    },
    "uncategorized_casks": {
      "type": "array",
      "description": "Uncategorized casks (auto-detected)",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true
    },
    "uncategorized_mas_apps": {
      "type": "array",
      "description": "Uncategorized Mac App Store apps (auto-detected)",
      "items": {
        "$ref": "#/definitions/mas_app"
      }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "mas_app": {
      "type": "object",
      "description": "Mac App Store application",
      "required": [
        "name",
        "id"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "Application name",
          "minLength": 1,
          "examples": [
            "Xcode",
            "LINE",
            "Amphetamine"
          ]
        },
        "id": {
          "type": "integer",
          "description": "Mac App Store ID",
          "minimum": 1,
          "examples": [
            497799835,
            539883307,
            937984704
          ]
        }
      },
      "additionalProperties": false
    }
  }
}
