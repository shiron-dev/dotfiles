{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/shiron-dev/dotfiles/schemas/packages-grouped.schema.json",
  "title": "Homebrew Packages Configuration with Groups and Tags",
  "description": "Schema for Homebrew packages configuration file with group and tag support",
  "type": "object",
  "required": [
    "metadata",
    "groups"
  ],
  "properties": {
    "metadata": {
      "type": "object",
      "description": "Metadata information about the configuration",
      "required": [
        "version",
        "supports_groups",
        "supports_tags"
      ],
      "properties": {
        "version": {
          "type": "string",
          "description": "Schema version",
          "pattern": "^\\d+\\.\\d+$",
          "examples": [
            "2.0",
            "2.1"
          ]
        },
        "supports_groups": {
          "type": "boolean",
          "description": "Whether this configuration supports groups",
          "const": true
        },
        "supports_tags": {
          "type": "boolean",
          "description": "Whether this configuration supports tags",
          "const": true
        }
      },
      "additionalProperties": false
    },
    "groups": {
      "type": "object",
      "description": "Package groups definition",
      "patternProperties": {
        "^[a-z][a-z0-9_-]*$": {
          "$ref": "#/definitions/group"
        }
      },
      "additionalProperties": false
    },
    "profiles": {
      "type": "object",
      "description": "Installation profiles - predefined combinations",
      "patternProperties": {
        "^[a-z][a-z0-9_-]*$": {
          "$ref": "#/definitions/profile"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "definitions": {
    "group": {
      "type": "object",
      "description": "A package group definition",
      "required": [
        "description",
        "priority",
        "packages"
      ],
      "properties": {
        "description": {
          "type": "string",
          "description": "Human-readable description of the group",
          "minLength": 1
        },
        "priority": {
          "type": "integer",
          "description": "Installation priority (lower numbers install first)",
          "minimum": 1,
          "maximum": 99
        },
        "packages": {
          "type": "array",
          "description": "Packages in this group",
          "items": {
            "$ref": "#/definitions/package"
          }
        }
      },
      "additionalProperties": false
    },
    "package": {
      "type": "object",
      "description": "A package definition",
      "required": [
        "name",
        "type"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "Package name",
          "minLength": 1,
          "examples": [
            "git",
            "visual-studio-code",
            "homebrew/core",
            "Xcode"
          ]
        },
        "type": {
          "type": "string",
          "description": "Package type",
          "enum": [
            "tap",
            "brew",
            "cask",
            "mas"
          ]
        },
        "id": {
          "type": "integer",
          "description": "Mac App Store ID (required for mas type)",
          "minimum": 1
        },
        "tags": {
          "type": "array",
          "description": "Tags for categorization and filtering",
          "items": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_-]*$",
            "examples": [
              "essential",
              "development",
              "productivity",
              "version-control",
              "editor",
              "browser"
            ]
          },
          "uniqueItems": true
        },
        "description": {
          "type": "string",
          "description": "Optional description of the package",
          "minLength": 1
        }
      },
      "additionalProperties": false,
      "allOf": [
        {
          "if": {
            "properties": {
              "type": {
                "const": "mas"
              }
            }
          },
          "then": {
            "required": [
              "name",
              "type",
              "id"
            ]
          }
        }
      ]
    },
    "profile": {
      "type": "object",
      "description": "Installation profile definition",
      "required": [
        "description"
      ],
      "properties": {
        "description": {
          "type": "string",
          "description": "Human-readable description of the profile",
          "minLength": 1
        },
        "groups": {
          "type": "array",
          "description": "Groups to include in this profile",
          "items": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_-]*$"
          },
          "uniqueItems": true
        },
        "tags": {
          "type": "array",
          "description": "Tags to include in this profile",
          "items": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_-]*$"
          },
          "uniqueItems": true
        },
        "exclude_groups": {
          "type": "array",
          "description": "Groups to exclude from this profile",
          "items": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_-]*$"
          },
          "uniqueItems": true
        },
        "exclude_tags": {
          "type": "array",
          "description": "Tags to exclude from this profile",
          "items": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_-]*$"
          },
          "uniqueItems": true
        }
      },
      "additionalProperties": false
    }
  }
}
